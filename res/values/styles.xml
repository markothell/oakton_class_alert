<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarItemBackground">@drawable/blue_bar</item>
    </style>
    <style name="classAlertStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/customActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    <style name="classText">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
    
    <style name="customActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <!-- <item name="android:background">@drawable/blue_bar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyTheme.ActionBar.CustomOverflow</item>-->
    </style>
  	<style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">#006257</item>
 	</style>
	<style name="MyTheme.ActionBar.CustomOverflow" parent="android:style/Widget.Holo.Light.ActionButton">
	  	<item name="android:icon">@drawable/action_overflow</item>
	</style>
</resources>